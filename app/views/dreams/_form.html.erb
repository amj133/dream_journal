<%= form_for([@user, @dream]) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :body %>
  <%= f.text_area :body %><br>

  <%= f.label :analysis %>
  <%= f.text_area :analysis %><br>

  <%= f.label "Category" %>
  <%= collection_select(:dream, :category_ids, Category.all, :id, :name) %><br>

  <%= f.submit %>
<% end %>
