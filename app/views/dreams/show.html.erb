<div class='dreams'>
  <div class='dreams-info-container'>
    <h3><%= @dream.user.user_name %> - <%= @dream.title%></h3>

    <p><%= @dream.body %></p>

    <ul>
      <li><strong>Analysis:</strong>
      <%= @dream.analysis %></li><br>
      <li>Dream Categories:
          <% @dream.categories.each do |category| %>
            <%= link_to category.name, category_path(category) %>
          <% end %></li>
      <p><%= link_to "Add Additional Category", dream_add_category_path(@dream) %></p>
    </ul>



    <% if @dream.comments.count == 0 %>
      <%= render partial: "comments/form" %>
    <% else %>
      <%= render partial: "comment", collection: @dream.comments.reverse %>
      <%= render partial: "comments/form" %>
    <% end %>
  </div>

  <div class="dreams-image-container">
    <%=image_tag("brain_tree.png", alt: "tree branches inside of a brain", id:"dreams-image") %>
  </div>
</div>
