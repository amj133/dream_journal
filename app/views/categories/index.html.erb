<div class='categories'>
  <div class='categories-list-container'>
    <h3>List of Dream Categories</h3>

    <% if current_admin? %>
      <%= link_to "Create new dream category", new_admin_category_path %>
    <% end %>

    <ul>
      <% @categories.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category) %>
          <% if current_admin? %>
            <%= link_to "edit", edit_admin_category_path(category) %>
            <%= link_to "delete", admin_category_path(category), method: :delete %>
          <% end %>
        </li><br>
      <% end %>
    </ul>
  </div>

  <div class="categories-image-container">
    <%= image_tag("paint.png", alt: "blue paint streak", id:"categories-image") %>
  </div>
</div>
