<div class='categories'>
  <div class='category-list-container'>
    <h3>List of Dream Categories</h3>

    <%= link_to "Create new dream category", new_category_path %>

    <ul>
      <% @categories.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category) %>
          <%= link_to "edit", edit_category_path(category) %>
          <%= link_to "delete", category_path(category), method: :delete %>
        </li><br>
      <% end %>
    </ul>
  </div>

  <div class="categories-image-container">
    <%= image_tag("japanese_maple.png", alt: "japanese maple", id:"categories-image") %>
  </div>
</div>
